 #include <Wire.h>
#define I2C_SLAVE_ADDR 0x12
#define SDA_PIN 21
#define SCL_PIN 22

void setup() {
  Wire.begin(SDA_PIN, SCL_PIN); // Inicia como maestro
  Serial.begin(115200);
  Serial.println("I2C maestro listo");
}

void loop() {
  Wire.beginTransmission(I2C_SLAVE_ADDR);
  Wire.write(20); // Env√≠a el valor 20
  Wire.endTransmission();
  Serial.println("Enviado 20 al esclavo");
  delay(1000);
}